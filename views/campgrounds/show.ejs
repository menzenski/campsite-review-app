<% include ../partials/head %>

<div class="row">

  <div class="col-md-3">
    <p class="lead">YelpCamp</p>
    <div class="list-group">
      <li class="list-group-item">Information</li>
      <li class="list-group-item">More information</li>
      <li class="list-group-item">Still more information</li>
    </div><!-- /.list-group -->
  </div><!-- /.col-md-3 -->

  <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campground.image %>">
        <div class="caption-full">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
        </div>
      </div><!-- /.thumbnail -->


    <div id="yc-comments" class="well">
      <!-- <h3>Comments</h3> -->
      <div id="yc-add-comment" class="text-right">
        <a href="/campgrounds/<%= campground._id %>/comments/new"
            class="btn btn-primary">Add a comment</a>
      </div><!-- /.text-right -->
      <hr>
      <% campground.comments.forEach(function(comment) { %>
        <div class="row yc-comment">
          <div class="col-md-12">
              <strong><%= comment.author %></strong><span
                  class="pull-right">10 days ago</span>
            <p><%= comment.text %></p>
          </div><!-- /.col-md-12 -->
        </div><!-- /.row .yc-comment -->
      <% }); %>
    </div><!-- /.yc-comments -->

  </div><!-- /.col-md-9 -->

</div><!-- /.row -->

<% include ../partials/foot %>
