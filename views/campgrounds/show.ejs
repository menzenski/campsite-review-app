<% include ../partials/head %>

<div class="row">

  <div class="col-md-3">
    <p class="lead">YelpCamp</p>
    <div class="list-group">
      <li class="list-group-item">Information</li>
      <li class="list-group-item">More information</li>
      <li class="list-group-item">Still more information</li>
    </div><!-- /.list-group -->
  </div><!-- /.col-md-3 -->

  <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campground.image %>">
        <div class="caption-full">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
          <p>
            <em>Submitted by <%= campground.author.username %></em>
          </p>

          <% if (currentUser && campground.author.id.equals(currentUser._id)) { %>
            <form class="form-inline"
                action="/campgrounds/<%= campground._id %>?_method=DELETE"
                method="POST">
              <div class="form-group">
                <a class="btn btn-warning"
                    href="/campgrounds/<%= campground._id %>/edit">Edit campground</a>
              </div><!-- /.form-group -->
              <div class="form-group">
                <button type="submit"
                    class="btn btn-danger">Delete campground</button>
              </div><!-- /.form-group -->
            </form>
          <% }%>

        </div>
      </div><!-- /.thumbnail -->


    <div id="yc-comments" class="well">
      <!-- <h3>Comments</h3> -->
      <div id="yc-add-comment" class="text-right">
        <a href="/campgrounds/<%= campground._id %>/comments/new"
            class="btn btn-primary">Add a comment</a>
      </div><!-- /.text-right -->
      <hr>
      <% campground.comments.forEach(function(comment) { %>
          <% include ../partials/comment %>
      <% }); %>
    </div><!-- /.yc-comments -->

  </div><!-- /.col-md-9 -->

</div><!-- /.row -->

<% include ../partials/foot %>
