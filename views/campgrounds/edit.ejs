<% include ../partials/head %>

<div class="row">

  <div class="col-xs-12 col-md-8 col-md-offset-2">

    <h1 id="yc-form-header">Edit campground</h1>

    <form class="form"
        action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div id="yc-form-body">
        <div class="form-group">
            <label for="yc-edit-campground-name">Campground Name</label>
            <input type="text" class="form-control" id="yc-edit-campground-name"
                name="campground[name]" value="<%= campground.name %>">
        </div><!-- /.form-group -->
        <div class="form-group">
            <label for="yc-edit-campground-image">Campground Image URL</label>
            <input type="text" class="form-control" id="yc-edit-campground-image"
                name="campground[image]" value="<%= campground.image %>">
        </div><!-- /.form-group -->
        <div class="form-group">
            <label>Campground Description</label>
            <textarea class="form-control" name="campground[description]"
                rows="5"><%= campground.description %></textarea>
        </div><!-- /.form-group -->
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div><!-- /.form-group -->
        <p><a href="/campgrounds">Go back</a></p>
      </div>
    </form>

  </div><!-- /.col-xs-12 .col-md-8 .col-lg-6 -->

</div><!-- ./row -->


<% include ../partials/foot %>
