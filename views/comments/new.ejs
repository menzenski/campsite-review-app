<% include ../partials/head %>

<div class="row">

  <div class="col-xs-12 col-md-8 col-md-offset-2">

    <h1 id="yc-form-header">Comment on '<%= campground.name %>'</h1>

    <form class="form"
        action="/campgrounds/<%= campground._id%>/comments" method="POST">
      <div id="yc-form-body">
        <div class="form-group">
            <label for="yc-comment-author">Your name</label>
            <input type="text" class="form-control" id="yc-comment-author"
                name="comment[author]" placeholder="<%= currentUser.username %>" readonly>
        </div><!-- /.form-group -->
        <div class="form-group">
            <label>Your comment</label>
            <textarea class="form-control" rows="5" name="comment[text]"
                placeholder="<%= campground.name %> is..."></textarea>
        </div><!-- /.form-group -->
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div><!-- /.form-group -->
        <p><a href="/campgrounds/<%= campground._id %>">Go back</a></p>
      </div>
    </form>

  </div><!-- /.col-xs-12 .col-md-8 .col-md-offset-2 -->

</div><!-- /.row -->

<% include ../partials/foot %>
